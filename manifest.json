{
        "name":"豆瓣.FM歌曲下载",
        "version":"1.0.9",
        "manifest_version":2,
        "minimum_chrome_version": "31",
        "description":"在听豆瓣.fm时下载当前歌曲。https://github.com/sprhawk/douban.fm-download-chrome-extension  http://www.douban.com/people/sprhawk/",
        "icons":{
                "16":"icon-1.png",
                "48":"icon48.png",
                "128":"icon128.png"
        },
        "permissions":[
            "http://douban.fm/*",
            "https://douban.fm/*",
            "http://*.douban.com/*",
            "https://*.douban.com/*",
            "http://*.doubanio.com/*",
            "https://*.doubanio.com/*",
            "webRequest",
            "tabs",
            "downloads"
        ],
        "background": {
                      "scripts":["background.js"]
        },
        "page_action": {
                       "default_title":"我是豆瓣.FM pro",
                       "default_icon":"icon-1.png"
        },
        "content_scripts":[
                {
                        "matches":[
                                "http://douban.fm/*",
                                "https://douban.fm/*"
                                ],
                        "js":["jquery-2.2.1.min.js", "content_script.js"]
                }
        ]
}
